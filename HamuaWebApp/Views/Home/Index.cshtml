@{
    ViewData["Title"] = "Home Page";
}
<img src="~/img/Marae-Preview-ConvertImage (3).png" class="bg" alt="Waikirikiri" />
<div class="register-container  text-center">
    <div>
        <div><h1 class="home-heading">Waikirikiri Marae</h1></div>
        <div><span class="home-sub-heading">Hamua Ki Uta, Kawea Ki Tai</span></div>
        <div> <a class="btn btn-home-link" aria-label="Register as a hapū member" asp-area="" asp-action="Register">Register Now</a></div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $("header").hide();
        $(document).ready(function () {
            $(".navbar-dark").addClass("navbar-light");
            $(".navbar-dark").addClass("bg-transparent");
            $(".navbar-dark").removeClass("bg-dark");
            $(".navbar-dark").removeClass("navbar-dark");
            $(".text-light").addClass("text-dark");
            $(".text-light").removeClass("text-light");
            $(".nav-brand-logo-light").addClass("nav-brand-logo-dark");

            $("header").show();

        });
    </script>
}