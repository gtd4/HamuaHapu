        var formPages = $('.carousel-item').length;
        var min = 0;
        var max = formPages - 1;
        $('#carouselExampleFade').on('slide.bs.carousel', function (event) {
            // do something…
            var to = event.to;
            if (to < 1) {
                $('.btn-prev').hide();
            } else {
                $('.btn-prev').show();
            }
            if (to === max) {
                $('.btn-next').hide();
                $('.btn-submit').show();
            }
            else {
                $('.btn-next').show();
                $('.btn-submit').hide();
            }

            window.scrollTo(0, 0);
        });
    </script>
