@model IEnumerable<HamuaHapuCommon.Resources.MaraeResource>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hapu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Hapu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaraeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaraeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaraeId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>